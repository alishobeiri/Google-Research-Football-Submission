{
  "name": "tictactoe",
  "title": "Tic Tac Toe",
  "description": "Classic Tic Tac Toe",
  "version": "1.0.0",
  "agents": [2],
  "configuration": {
    "episodeSteps": 10,
    "actTimeout": 1,
    "agentTimeout": 2
  },
  "reward": {
    "description": "-1 = Lost, 0 = Draw/Ongoing, 1 = Won",
    "enum": [-1, 0, 1],
    "default": 0
  },
  "observation": {
    "board": {
      "description": "Serialized 3x3 grid. 0 = Empty, 1 = X, 2 = O",
      "type": "array",
      "shared": true,
      "default": [0, 0, 0, 0, 0, 0, 0, 0, 0],
      "minItems": 9,
      "maxItems": 9
    },
    "mark": {
      "description": "Mark for the agent to use",
      "defaults": [1, 2],
      "enum": [1, 2]
    },
    "remainingOverageTime": 2
  },
  "action": {
    "description": "Position to place a mark on the board.",
    "type": "integer",
    "minimum": 0,
    "maximum": 8
  },
  "status": {
    "defaults": ["ACTIVE", "INACTIVE"]
  }
}
